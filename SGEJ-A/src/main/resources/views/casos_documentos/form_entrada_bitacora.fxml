<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controllers.FormBitacoraController"
            prefWidth="400.0" prefHeight="250.0"
            style="-fx-background-color: white; -fx-background-radius: 8;" layoutX="85" layoutY="55">
    <children>
        <Label fx:id="lbl_TituloFormulario"
               text="Nueva Bitácora"
               layoutX="20" layoutY="20"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
