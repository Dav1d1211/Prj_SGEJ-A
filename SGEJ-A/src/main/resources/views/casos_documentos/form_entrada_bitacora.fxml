<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controllers.casos_documentacion.FormBitacoraController"
            prefWidth="500.0" prefHeight="400.0"
            style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, -5, 5); -fx-background-radius: 8;">
    <stylesheets>
        <URL value="@/styles/app.css" />
        <URL value="@/styles/combobox-custom.css" />
    </stylesheets>

    <VBox spacing="18" AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0" 
        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Título Mejorado -->
        <StackPane prefHeight="70" alignment="CENTER" 
                   style="-fx-background-color: linear-gradient(to right, #2563eb, #3b82f6); -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(37,99,235,0.3), 4, 0, 0, 2);">
            <Text fx:id="lbl_TituloFormulario" text="📒 NUEVA BITÁCORA" fill="white" 
                  style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 2, 0, 0, 1);" />
        </StackPane>

        <!-- Contenedor del Formulario -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 2); -fx-padding: 18; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 12;" VBox.vgrow="ALWAYS">
            <Label text="📋 Información Básica" style="-fx-font-size: 17px; -fx-font-weight: bold; -fx-text-fill: #374151; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            <Separator style="-fx-background-color: #e5e7eb;" />
            
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150" />
                    <ColumnConstraints hgrow="ALWAYS" prefWidth="280" />
                </columnConstraints>
                
                <Label text="🔢 N° de Expediente:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #4a5568; -fx-font-family: 'Segoe UI', Arial, sans-serif;" 
                       GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="txtf_Expediente" 
                          style="-fx-background-color: #f8fafc; -fx-border-color: #d1d5db; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', Arial, sans-serif;" 
                          GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <Label text="👤 Responsable:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #4a5568; -fx-font-family: 'Segoe UI', Arial, sans-serif;" 
                       GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="txtf_Responsable" 
                          style="-fx-background-color: #f8fafc; -fx-border-color: #d1d5db; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', Arial, sans-serif;" 
                          GridPane.rowIndex="1" GridPane.columnIndex="1" />
                
                <Label text="📅 Fecha de creación:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #4a5568; -fx-font-family: 'Segoe UI', Arial, sans-serif;" 
                       GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <DatePicker fx:id="dp_FechaCreacion" 
                          style="-fx-background-color: #f8fafc; -fx-border-color: #d1d5db; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', Arial, sans-serif;" 
                          GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </GridPane>

            <Region VBox.vgrow="ALWAYS" />

            <!-- Botones de Acción -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button fx:id="btn_Cancelar" text="Cancelar" prefWidth="120" prefHeight="40"
                        styleClass="btn-secondary" />
                <Button fx:id="btn_Guardar" text="💾 Guardar" prefWidth="120" prefHeight="40"
                        styleClass="btn-success" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>