        <TextField fx:id="txtf_Expediente" layoutX="150" layoutY="66" prefWidth="220"/>
        <Label fx:id="lbl_Responsable" text="Responsable:" layoutX="20" layoutY="110"/>
        <TextField fx:id="txtf_Responsable" layoutX="150" layoutY="106" prefWidth="220"/>
        <Label fx:id="lbl_FechaCreacion" text="Fecha de creación:" layoutX="20" layoutY="150"/>
        <DatePicker fx:id="dp_FechaCreacion" layoutX="150" layoutY="146" prefWidth="220"/>
        <Button fx:id="btn_Guardar" text="Guardar" layoutX="150" layoutY="200" styleClass="button-windows"/>
        <Button fx:id="btn_Cancelar" text="Cancelar" layoutX="240" layoutY="200" styleClass="button-windows"/>
    </children>
</AnchorPane>