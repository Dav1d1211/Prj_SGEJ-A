<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controllers.administracion_sistema.FormUsuarioController">
            
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-form"
                AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <VBox spacing="20" styleClass="form-panel" alignment="TOP_LEFT">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>

            <!-- Title panel with light color and white text -->
            <StackPane prefHeight="48" style="-fx-background-color: #2196f3; -fx-background-radius: 12;" alignment="CENTER">
                <Label fx:id="lbl_Titulo"
                      text="Crear / Editar Usuario"
                      style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </StackPane>

            <!-- Error message display -->
            <Label fx:id="lbl_Error" style="-fx-text-fill: red; -fx-font-weight: bold;" />

            <!-- Form fields grouped visually -->
            <GridPane hgap="18" vgap="16">
                <columnConstraints>
                    <ColumnConstraints prefWidth="240"/>
                    <ColumnConstraints prefWidth="240"/>
                </columnConstraints>
                <!-- User Role and State -->
                <Label text="Rol de Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
                <ComboBox fx:id="cmb_TipoUsuario" promptText="Seleccione el Rol" prefWidth="220" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label text="Estado del Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
                <ComboBox fx:id="cmb_EstadoUsuario" promptText="Seleccione Estado" prefWidth="220" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <!-- Identification -->
                <Label text="Identificación / Cédula:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txt_Identificacion" promptText="Cédula o RUC" prefWidth="220" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                <!-- Name and Surname -->
                <Label text="Nombres:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label text="Apellidos:" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <TextField fx:id="txt_Nombres" prefWidth="220" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txt_Apellidos" prefWidth="220" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                <!-- Username and Email -->
                <Label text="Nombre Usuario:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <Label text="Correo:" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                <TextField fx:id="txt_Usuario" prefWidth="220" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="txt_Email" prefWidth="220" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
                <!-- Passwords -->
                <Label text="Contraseña:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <Label text="Confirmar Contraseña:" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                <PasswordField fx:id="txt_Clave" prefWidth="220" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txt_ConfirmarClave" prefWidth="220" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Save / Cancel Buttons -->
            <HBox spacing="18" alignment="CENTER">
                <Button fx:id="btn_Guardar" text="Guardar" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button fx:id="btn_Cancelar" text="Cancelar" style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane>