<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" styleClass="content-area" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="application.controllers.ModuloParametrosController">
    
    <!-- Title Panel Centered at the Top -->
    <Pane fx:id="pnl_Title"
          prefHeight="44.0"
          style="-fx-background-color: #14213d; -fx-background-radius: 16; -fx-border-radius: 16;"
          AnchorPane.leftAnchor="14.0"
          AnchorPane.rightAnchor="2.0"
          AnchorPane.topAnchor="4.0">
        <children>
            <Text fill="WHITE"
                  text="Parámetros del Sistema"
                  style="-fx-font-size: 16.0; -fx-font-weight: bold;"
                  layoutY="28.0"
                  layoutX="50.0">
                <font>
                    <Font size="16.0" />
                </font>
            </Text>
        </children>
    </Pane>
    
    <!-- Controls -->
    <TextField fx:id="txt_Busqueda" layoutY="54.0" prefHeight="26.0" prefWidth="332.0" promptText="Buscar por código, nombre, etc." AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="54.0" />
    <Button fx:id="btn_Buscar" layoutY="55.0" styleClass="button-windows,button-windows-blue" text="Buscar" AnchorPane.leftAnchor="356.0" AnchorPane.topAnchor="55.0" />
    <Button fx:id="btn_Nuevo" layoutY="55.0" styleClass="button-windows,button-windows-blue" text="Nuevo Parámetro" AnchorPane.rightAnchor="15.6" AnchorPane.topAnchor="55.0" />
    
    <!-- Table -->
    <TableView fx:id="tb_Parametros" styleClass="data-table" 
               AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="14.0" 
               AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="96.0">
        <columns>
            <TableColumn fx:id="tbc_Codigo" text="Código" />
            <TableColumn fx:id="tbc_Nombre" text="Nombre" />
            <TableColumn fx:id="tbc_Descripcion" text="Descripción" />
            <TableColumn fx:id="tbc_Valor" text="Valor" />
            <TableColumn fx:id="tbc_Tipo" text="Tipo" />
            <TableColumn fx:id="tbc_BotonEditar" prefWidth="20" styleClass="column-action" text=" " />
            <TableColumn fx:id="tbc_BotonEliminar" prefWidth="20" styleClass="column-action" text=" " />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    
</AnchorPane>
