<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" 
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="application.controllers.administracion_sistema.FormLimpiarBDController"
           prefHeight="450.0" prefWidth="600.0">
           
    <VBox spacing="24" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" style="-fx-background-color: white;">
        
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
        
        <!-- Título -->
        <StackPane style="-fx-background-color: #ff5252; -fx-background-radius: 8;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="ADVERTENCIA: LIMPIEZA DE BASE DE DATOS" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
        </StackPane>
        
        <!-- Explicación -->
        <VBox spacing="15" style="-fx-background-color: #f5f5f5; -fx-background-radius: 8;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Text text="Esta operación eliminará TODOS los datos del sistema EXCEPTO los usuarios." wrappingWidth="500.0">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Text>
            
            <Text text="Se eliminarán permanentemente:" wrappingWidth="500.0">
                <font>
                    <Font size="14.0"/>
                </font>
            </Text>
            
            <VBox spacing="5">
                <padding>
                    <Insets left="20"/>
                </padding>
                <Text text="• Clientes" />
                <Text text="• Casos" />
                <Text text="• Documentos" />
                <Text text="• Audiencias" />
                <Text text="• Facturas" />
                <Text text="• Comunicaciones" />
                <Text text="• Empleados" />
                <Text text="• Bitácora de actividades" />
                <Text text="• Parámetros del sistema" />
            </VBox>
            
            <Text text="Esta acción NO puede deshacerse. Considere realizar una copia de seguridad antes de continuar." 
                  wrappingWidth="500.0" style="-fx-fill: red;">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Text>
        </VBox>
        
        <!-- Checkbox de confirmación -->
        <CheckBox fx:id="chk_Confirmar" text="Comprendo las consecuencias y acepto eliminar los datos"/>
        
        <!-- Botones -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btn_Limpiar" text="EJECUTAR LIMPIEZA" 
                    style="-fx-background-color: #ff5252; -fx-text-fill: white;" 
                    disable="true" prefWidth="200">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Button>
            
            <Button fx:id="btn_Cancelar" text="CANCELAR" 
                    style="-fx-background-color: #e0e0e0;" 
                    prefWidth="150">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
