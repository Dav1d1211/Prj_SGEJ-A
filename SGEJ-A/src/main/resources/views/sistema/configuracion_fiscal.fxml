<VBox fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.ConfiguracionFiscalController">
   <children>
      <Label text="Configuración de Parámetros Fiscales">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="150.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Porcentaje de IVA (%)" />
            <Label text="RUC Institucional" GridPane.rowIndex="1" />
            <Label text="Razón Social" GridPane.rowIndex="2" />
            <Label text="Dirección Matriz" GridPane.rowIndex="3" />
            <Label text="Dirección Sucursal" GridPane.rowIndex="4" />
            <Label text="Porcentaje para Subtotal (%)" GridPane.rowIndex="5" />
            <TextField fx:id="txtPorcentajeIva" GridPane.columnIndex="1" />
            <TextField fx:id="txtRucInstitucional" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtRazonSocial" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="txtDireccionMatriz" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="txtDireccionSucursal" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="txtSubtotalPorcentaje" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#guardarCambios" prefWidth="100.0" style="-fx-background-color: #4CAF50;" text="Guardar" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
